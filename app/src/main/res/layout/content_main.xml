<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sample.listup.com.listupsample.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_text"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="scan through barcode scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        style="@style/buttonStyle"
        android:id="@+id/barcode_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/barcode_scan"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/isbn_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="10 digit ISBN" />

        <Button
            android:text="SEARCH"
            android:textAllCaps="false"
            android:id="@+id/isbn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/price_layout"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Enter Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:id="@+id/price"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:visibility="gone"
        android:id="@+id/addBook"
        style="@style/buttonStyle"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Add book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Sample text case for flow with ISBN : 9789685960335"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Click"
        android:id="@+id/testCase"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/all_books"
        android:text="All books"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
